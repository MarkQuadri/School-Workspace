using System;

namespace Opgave_56
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double gennemsnit = 7;

            Console.Write("Indtast temperatur for dag 1: ");
            double temperatur1 = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 2: ");
            double temperatur2 = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 3: ");
            double temperatur3 = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 4: ");
            double temperatur4 = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 5: ");
            double temperatur5 = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 6: ");
            double temperatur6 = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 7: ");
            double temperatur7 = double.Parse(Console.ReadLine());

            Console.Write("Gennemsnittet for temperatur: "+ temperatur1 + temperatur2 + temperatur3 + temperatur4 + temperatur5 + temperatur6 + temperatur7 / gennemsnit);
            Console.ReadLine();
        }
    }
}
