using System;

namespace Opgave_56
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double[] temperaturer = new double[7];

            double gennemsnit = 7;

            Console.Write("Indtast temperatur for dag 1: ");
            temperaturer [0] = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 2: ");
            temperaturer [1] = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 3: ");
            temperaturer [2] = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 4: ");
            temperaturer [3] = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 5: ");
            temperaturer [4] = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 6: ");
            temperaturer [5] = double.Parse(Console.ReadLine());

            Console.Write("Indtast temperatur for dag 7: ");
            temperaturer [6] = double.Parse(Console.ReadLine());

            Console.Write("Gennemsnittet for temperatur: " + (temperaturer[0] + temperaturer[1] + temperaturer[2] + temperaturer[3] + temperaturer[4] + temperaturer[5] + temperaturer[6]) / gennemsnit);
            Console.ReadLine();
        }
    }
}
